// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model SkyblockPlayer {
  uuid String @id
  updateTime BigInt
  response String @db.LongText
}

model UserAgents {
  id String @id @default(uuid())
  useragent String 
  time Int 
}

model AverageLowestBazaarData {
  uuid String @id @default(uuid())
  itemId String
  time BigInt
  buyPrice Float
  sellPrice Float
}

model AverageLowestBinData {
  uuid String @id @default(uuid())
  itemId String
  time BigInt
  lowestBin Float
}

model AuctionHouseData {
  uuid String @id
  playerUUID String
  start BigInt
  end BigInt
  itemName String
  itemBytes String @db.LongText
  itemId String
  bin Boolean
  startingBid BigInt
  highestBid BigInt
  itemData ItemData @relation(fields: [itemId], references: [itemId])
}

model ItemData {
  itemId String @id
  rarity String
  name String
  npcSellPrice Float
  bazaarBuyPrice Float @default(0)
  bazaarSellPrice Float @default(0)
  lowestBin Float @default(0)
  averageLowestBin Float @default(0)
  averageBazaarSell Float @default(0)
  averageBazaarBuy Float @default(0)
  auctions AuctionHouseData[]
}
